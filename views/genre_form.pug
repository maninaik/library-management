extends layout 

block content 
    h1= title 
    form(action="" METHOD="POST")
        .form-group(style="width:50%") 
            label(for="name") Genre Name 
            input#name.form-control(type='text' name="name" placeholder="Fantasy, Poetry, etc." value = (undefined === genre ? '' : genre.name) , required)
        button.btn.btn-primary(type="submit") Submit 
    
        if errors
            each error in errors  
                p.text-danger.error #[strong #{error.msg}]
            