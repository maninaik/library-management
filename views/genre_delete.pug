extends layout 
block content 
    h1= title + ' - ' + genre.name 

    if books.length 

        p.text-danger #[strong Delete the following books before attempting to delete the Genre]  

        h4 Books 

        dl 
        each book in books 
            dt 
                a(href=book.url) #{book.title} 
            dd #{book.summary} 

    else 
        p Do you really want to delete this Genre ?

        form(method='POST' action='')
            .form-group 
                input#genreid.form-control(type='hidden' name='genreid' value=genre._id required)

            button.btn.btn-primary(type='submit') Delete   
