extends layout 

block content 
    h1= title 
    ul  
        - book_list.sort(function(a,b){ let ua = a.title.toUpperCase(); let ub = b.title.toUpperCase(); return (ua < ub) ? -1 : (ua > ub) ? 1 : 0;});
        each book in book_list 
            li
                a(href=book.url) !{book.title}
                | (#{book.author.name})
        else 
            li There are no books.